.side_bar
  .side_bar_header
    .side_bar_header__box
      %p.side_bar_header__box__name 
        = current_user.name
      %ul.side_bar_header__box__icon
        %li<>
        = link_to new_group_path, class: "side_bar_header__box__icon__btn" do
          = icon('far', 'edit')
        %li<>
        = link_to edit_user_path(current_user), class: "side_bar_header__box__icon__btn" do
          = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class:"group" do
        .group__name
          = group.name
        .group__message
          = group.show_last_message