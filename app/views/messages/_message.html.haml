.main_chat__centers__info
  .main_chat__centers__info__name
    = message.user.name
  .main_chat__centers__info__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main_chat__centers__text
  - if message.content.present?
    %p.main_chat__centers__center__content
      = message.content
  = image_tag message.image.url, class: 'main_chat__centers__center__image' if message.image.present?